<Window x:Class="UserLogGenerator.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="UserInfo Generator" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Label Content="UserName" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Right" />
        <TextBox x:Name="textUsername" Grid.Column="1" Grid.Row="0" Margin="2,2,2,2"/>
        <Label Content="Password" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" />
        <TextBox x:Name="textPassword" Grid.Column="1" Grid.Row="1" Margin="2,2,2,2" />
        <Label Content="Key" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right" />
        <TextBox x:Name="textKey" Grid.Column="1" Grid.Row="2" Margin="2,2,2,2" />
        
        <Button x:Name="buttonGenerateKey" Margin="30,2,30,2" Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="3" Click="buttonGenerateKey_Click">Generate</Button>
    </Grid>
</Window>
